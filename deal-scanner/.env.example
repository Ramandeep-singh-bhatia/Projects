# Multi-Retail Deal Scanner - Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================
# TELEGRAM BOT CONFIGURATION (REQUIRED)
# ============================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Get your chat ID by messaging @userinfobot on Telegram
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# OPENAI API (OPTIONAL - for AI deal analysis)
# ============================================
# Get from: https://platform.openai.com/api-keys
# Free tier: $5 credit for new accounts
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# RAPIDAPI (OPTIONAL - for Amazon data)
# ============================================
# Get from: https://rapidapi.com/
# Free tier: 500 requests/month
RAPIDAPI_KEY=your_rapidapi_key_here

# ============================================
# SERPAPI (OPTIONAL - for Google Shopping)
# ============================================
# Get from: https://serpapi.com/
# Free tier: 100 searches/month
SERPAPI_KEY=your_serpapi_key_here

# ============================================
# RAINFOREST API (OPTIONAL - for Amazon data)
# ============================================
# Get from: https://www.rainforestapi.com/
# Free tier: 100 requests/month
RAINFOREST_API_KEY=your_rainforest_api_key_here

# ============================================
# GENERAL SETTINGS
# ============================================
# Enable/disable notifications (true/false)
NOTIFICATIONS_ENABLED=true

# Run browser in headless mode (true/false)
HEADLESS=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
