# API Keys
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# Model Configuration
EMBEDDING_MODEL=text-embedding-ada-002
LLM_MODEL=claude-sonnet-4-20250514
FALLBACK_LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1000

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_CHUNK_SIZE=1000

# Retrieval Configuration
TOP_K_RETRIEVAL=5
CONFIDENCE_THRESHOLD=0.7
HYBRID_SEARCH_ALPHA=0.7

# Database
DATABASE_URL=sqlite:///./data/database/customer_support.db
# For PostgreSQL: postgresql://user:password@localhost:5432/customer_support

# Vector Store
VECTOR_STORE_PATH=./data/vector_store
FAISS_INDEX_NAME=customer_support_index

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
RATE_LIMIT_PER_MINUTE=10

# Streamlit Configuration
STREAMLIT_PORT=8501

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
MAX_CONVERSATION_HISTORY=5
MAX_TOKENS_PER_REQUEST=8000
REQUEST_TIMEOUT=30

# Analytics
ENABLE_ANALYTICS=true
TRACK_COSTS=true

# Escalation
ESCALATION_CONFIDENCE_THRESHOLD=0.7
MAX_RETRY_ATTEMPTS=3
