# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_CHAT_MODEL=gpt-4-turbo-preview
OPENAI_CHEAP_MODEL=gpt-3.5-turbo

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=document-intelligence
PINECONE_DIMENSION=3072

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/document_intelligence
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Application Settings
APP_NAME=Document Intelligence Platform
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_for_jwt_signing

# File Upload Settings
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,xlsx,pptx,png,jpg,jpeg,eml,msg,html,md,txt
UPLOAD_DIR=data/uploads
PROCESSED_DIR=data/processed

# Document Processing Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=100
MAX_CHUNKS_PER_DOCUMENT=1000

# Search Configuration
VECTOR_SEARCH_TOP_K=10
KEYWORD_SEARCH_TOP_K=10
HYBRID_VECTOR_WEIGHT=0.7
HYBRID_KEYWORD_WEIGHT=0.3
SIMILARITY_THRESHOLD=0.7
RERANK_TOP_K=5

# RAG Configuration
MULTI_QUERY_NUM_QUERIES=3
HYDE_ENABLED=True
PARENT_CHUNK_ENABLED=True
MAX_CONTEXT_LENGTH=4000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=["http://localhost:3000","http://localhost:8501"]

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_THEME=light

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=True

# OCR Settings
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGES=eng
