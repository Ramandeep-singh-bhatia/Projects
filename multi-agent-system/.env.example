# ===================================
# Multi-Agent Business Automation System
# Environment Variables Configuration
# ===================================

# ============ LLM API Keys ============
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# LLM Model Configuration
REASONING_MODEL=gpt-4-turbo-preview
EXECUTION_MODEL=gpt-3.5-turbo
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=4096

# ============ Database ============
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=multi_agent_system
POSTGRES_USER=agent_user
POSTGRES_PASSWORD=your-secure-password-here

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0

REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ============ Application Settings ============
APP_NAME=Multi-Agent Business Automation System
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Security
SECRET_KEY=your-secret-key-for-jwt-signing-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============ CRM Integration ============
# Salesforce
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-security-token
SALESFORCE_DOMAIN=login

# HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_PORTAL_ID=your-portal-id

# ============ Email & Calendar ============
# Gmail API
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-refresh-token

# Outlook/Microsoft 365
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_TENANT_ID=your-tenant-id

# SMTP Fallback
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============ Project Management ============
# Jira
JIRA_SERVER=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token

# Asana
ASANA_ACCESS_TOKEN=your-asana-access-token
ASANA_WORKSPACE_ID=your-workspace-id

# ============ Web Search & Research ============
# Serper API (Google Search)
SERPER_API_KEY=your-serper-api-key

# Tavily AI Search
TAVILY_API_KEY=your-tavily-api-key

# Brave Search
BRAVE_SEARCH_API_KEY=your-brave-search-api-key

# ============ Browser Automation ============
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# ============ Rate Limiting ============
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============ Monitoring ============
# Prometheus
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/multi_agent_system.log

# ============ Celery Task Queue ============
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/1
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/2

# ============ Agent Configuration ============
# Agent Execution Settings
MAX_AGENT_ITERATIONS=25
AGENT_TIMEOUT_SECONDS=300
ENABLE_HUMAN_IN_LOOP=true
CONFIDENCE_THRESHOLD=0.85

# Memory Settings
ENABLE_LONG_TERM_MEMORY=true
ENABLE_SEMANTIC_MEMORY=true
MEMORY_TTL_HOURS=24

# ============ Workflow Settings ============
# Workflow Execution
MAX_WORKFLOW_DURATION_MINUTES=60
ENABLE_WORKFLOW_CHECKPOINTING=true
CHECKPOINT_INTERVAL_SECONDS=30

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# ============ Feature Flags ============
ENABLE_AGENT_METRICS=true
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_AB_TESTING=false
ENABLE_AUDIT_TRAIL=true

# ============ Frontend ============
REACT_APP_API_URL=http://localhost:8000
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# ============ Development ============
RELOAD=true
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
